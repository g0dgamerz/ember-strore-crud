<GeneralContainer>
<main class="container mt-5" style="display: inline">
  <h1>Your Claims</h1>
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <LinkTo @route="index">
        Home
      </LinkTo>
    </li>
    <li class="breadcrumb-item">Your Claims</li>
  </ol>
  {{!-- {{#each this.shoppingCart.itemList as |item|}}
  {{item.name}}
  {{/each}} --}}
  {{#each this.cart.itemList as |item|}}
  <div class="cart-item d-flex align-item-center">
    <div class="cart-item-thumbnail">
      <img src="{{item.src}}" alt="" width="200" height="150"/>
    </div>
    <div class="ml-3">
      <h4>{{item.pname}}</h4>
      <i class="font-weight-bold">{{currency item.cprice}}</i>
    </div>
    <input type="number" class="ml-auto" value={{item.count}} {{on "input" (fn this.updateItemCount item)}}>
  </div>
  {{/each}}
  <section class="w-50 ml-auto text-right mb-5">
    <div class="row">
      <span class="col">Subtotal</span>
      <span class="col">{{currency this.subtotal }}</span>
    </div>
    <div class="row">
      <span class="col">Tax</span>
      <span class="col">{{currency this.tax }}</span>
    </div>
    <div class="row">
      <span class="col">Grand Total</span>
      <span class="col">{{currency this.total }}</span>
    </div>
  </section>

  <button type="button" class="btn btn-success float-right">
    Claim Now
  </button>
</main>
</GeneralContainer>